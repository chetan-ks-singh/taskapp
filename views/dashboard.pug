doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Dashboard-Task
    link(rel='stylesheet', href='./css/dashboard.css')
    link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500;600;700&family=Delius&display=swap', rel='stylesheet')
  body
    .task-create-wrapper
      .cross
        svg.cross-svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 24 24', fill='currentColor')
          path(fill-rule='evenodd', d='M5.47 5.47a.75.75 0 011.06 0L12 10.94l5.47-5.47a.75.75 0 111.06 1.06L13.06 12l5.47 5.47a.75.75 0 11-1.06 1.06L12 13.06l-5.47 5.47a.75.75 0 01-1.06-1.06L10.94 12 5.47 6.53a.75.75 0 010-1.06z', clip-rule='evenodd')
      .task
        textarea.task-text(name='task', placeholder='Write your Task.....', spellcheck='false')
        .send
          .calender
            //
              <p>Select due Date
              </p>
            label.due-d(for='due-date') Due Date
            input.date-pick(type='date')
          .svg-send
            svg.send-svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', viewBox='0 0 24 24', fill='currentColor')
              path(d='M3.478 2.405a.75.75 0 00-.926.94l2.432 7.905H13.5a.75.75 0 010 1.5H4.984l-2.432 7.905a.75.75 0 00.926.94 60.519 60.519 0 0018.445-8.986.75.75 0 000-1.218A60.517 60.517 0 003.478 2.405z')
    .overlay
    .dashboard-section
      -var darKmode = darkMode?'dark':false
      .dashboard-wrapper(data-dark = darKmode)
       
        .sidebar
          
          h1.logo-sidebar TaskSigma
          .dark-mode-wrapper 
            .dark-svg 
               svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor' class='svg-dark w-6 h-6')
                 path(stroke-linecap='round', stroke-linejoin='round', d='M12 3v2.25m6.364.386l-1.591 1.591M21 12h-2.25m-.386 6.364l-1.591-1.591M12 18.75V21m-4.773-4.227l-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0z')
          .intro 
            .profile 
              svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor' class='svg-profile w-6 h-6')
                path(stroke-linecap='round', stroke-linejoin='round', d='M17.982 18.725A7.488 7.488 0 0012 15.75a7.488 7.488 0 00-5.982 2.975m11.963 0a9 9 0 10-11.963 0m11.963 0A8.966 8.966 0 0112 21a8.966 8.966 0 01-5.982-2.275M15 9.75a3 3 0 11-6 0 3 3 0 016 0z')
            h1 Hi, #{user.name.split(' ')[0].replace(`${user.name.split(' ')[0][0]}`,`${user.name.split(' ')[0][0].toUpperCase()}`)}
          .sidebar-menu
            ul.menu
              li.my-task.menu-state 
                .svg
                  svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                    path(stroke-linecap='round', stroke-linejoin='round', d='M16.862 4.487l1.687-1.688a1.875 1.875 0 112.652 2.652L10.582 16.07a4.5 4.5 0 01-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 011.13-1.897l8.932-8.931zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0115.75 21H5.25A2.25 2.25 0 013 18.75V8.25A2.25 2.25 0 015.25 6H10')
                p My Task
              li
                .svg
                  svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                    path(stroke-linecap='round', stroke-linejoin='round', d='M11.35 3.836c-.065.21-.1.433-.1.664 0 .414.336.75.75.75h4.5a.75.75 0 00.75-.75 2.25 2.25 0 00-.1-.664m-5.8 0A2.251 2.251 0 0113.5 2.25H15c1.012 0 1.867.668 2.15 1.586m-5.8 0c-.376.023-.75.05-1.124.08C9.095 4.01 8.25 4.973 8.25 6.108V8.25m8.9-4.414c.376.023.75.05 1.124.08 1.131.094 1.976 1.057 1.976 2.192V16.5A2.25 2.25 0 0118 18.75h-2.25m-7.5-10.5H4.875c-.621 0-1.125.504-1.125 1.125v11.25c0 .621.504 1.125 1.125 1.125h9.75c.621 0 1.125-.504 1.125-1.125V18.75m-7.5-10.5h6.375c.621 0 1.125.504 1.125 1.125v9.375m-8.25-3l1.5 1.5 3-3.75')
                p All Projects
              li
                .svg
                  svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                    path(stroke-linecap='round', stroke-linejoin='round', d='M15 15l6-6m0 0l-6-6m6 6H9a6 6 0 000 12h3')
                p Upcoming
              li
                .svg
                  svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                    path(stroke-linecap='round', stroke-linejoin='round', d='M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z')
                p Calender
              li.logout-btn
                .svg
                  svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                    path(stroke-linecap='round', stroke-linejoin='round', d='M15.75 9V5.25A2.25 2.25 0 0013.5 3h-6a2.25 2.25 0 00-2.25 2.25v13.5A2.25 2.25 0 007.5 21h6a2.25 2.25 0 002.25-2.25V15M12 9l-3 3m0 0l3 3m-3-3h12.75')
                p Logout
          .create-tab
            .create
              svg.create-svg.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                path(stroke-linecap='round', stroke-linejoin='round', d='M12 4.5v15m7.5-7.5h-15')
        .main-section
          .main-wrapper
            .my-tasks-section
              .my-task-wrapper
                .spinner
                .my-task-titles
                  ul.task-titles
                    li.today-title.titles-state(data-title='today-wrapper ') Today
                    li.upcoming-title(data-title='upcoming-wrapper ') Upcoming
                    li.completed-title(data-title='completed-wrapper ') Completed
                    li.pending-title(data-title='pending-wrapper ') Pending
                .my-task-container
                  .today-wrapper.active-wrapper
                    .today
                      
                        
                  .upcoming-wrapper
                    .upcoming
                      
                        
                      
                  .completed-wrapper
                    .clear-all 
                      p Clear All
                    .completed
                      
                        
                        
                  .pending-wrapper
                    .pending
                      
                        

    script(src='/js/bundle.js')