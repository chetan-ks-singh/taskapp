doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Document
    link(rel='stylesheet', href='/css/index.css')
    link(href='https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css2?family=Dancing+Script:wght@500;600;700&family=Delius&display=swap', rel='stylesheet')
  body
    .hero-section
      .hero-container
        .hero-section-1
          .content-1
            .hero-img
              img(src='/img/hero-img.svg', alt='notes-image')
            .desc-p
              p.desc
                | Start with TaskSigma to Create and Manage your daily Task.
              .arrow-1
              .arrow-2
        .hero-section-2
          .content-2
            .logo
              h1 TaskSigma
            .login-form-wrapper
              .login-form
                form
                  .email
                    input(type='text', placeholder='Enter Email' required="")
                  .password
                    input(type='password', placeholder='Enter Password' required="")
                    .eye-password
                      svg.eye-close.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                        path(stroke-linecap='round', stroke-linejoin='round', d='M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c.993 0 1.953-.138 2.863-.395M6.228 6.228A10.45 10.45 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.498a10.523 10.523 0 01-4.293 5.774M6.228 6.228L3 3m3.228 3.228l3.65 3.65m7.894 7.894L21 21m-3.228-3.228l-3.65-3.65m0 0a3 3 0 10-4.243-4.243m4.242 4.242L9.88 9.88')
                      svg.eye-open.w-6.h-6(xmlns='http://www.w3.org/2000/svg', fill='none', viewBox='0 0 24 24', stroke-width='1.5', stroke='currentColor')
                        path(stroke-linecap='round', stroke-linejoin='round', d='M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z')
                        path(stroke-linecap='round', stroke-linejoin='round', d='M15 12a3 3 0 11-6 0 3 3 0 016 0z')
                  .login-err
                    p Incorrect Email or Password
                  .submit-btn
                    input(type='submit', value='Login')
                .note-login
                  p
                    | New to TaskSigma ? 
                    span.login-span
                      a(href='/auth/signup') Sign-up
    script(src='/js/bundle.js')